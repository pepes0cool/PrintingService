@model List<Printer>

<!DOCTYPE html>
<main class="main-content">
    <div class="container-fluid">
        <div class="row">
            <aside class="sidebar">
                <div class="sidebar-item">
                    <span>🖨️ Print Document</span>
                </div>
                <div class="sidebar-item">
                    <span>📜 View History</span>
                </div>
                <div class="sidebar-item">
                    <span>💵 Buy Paper</span>
                </div>
                <div class="sidebar-item">
                    <span>📊 History</span>
                </div>
                <div class="sidebar-item">
                    <span>🖨️ Manage Printer</span>
                </div>
            </aside>

            <!-- Main Content -->
            <div class="col-12 col-md-9 col-lg-10">
                <div class="card shadow border-0 mt-4">
                    <div class="card-header py-3" style="background-color:#8A70D6">
                        <h2 class="text-white text-center mb-0">Printer List</h2>
                    </div>
                    <div class="card-body p-4">
                        <div class="row pb-3">
                            <div class="col text-end">
                                <a asp-controller="Printer" asp-action="Create" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Create New Printer
                                </a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead class="table-secondary">
                                    <tr>
                                        <th>Printer Name</th>
                                        <th>Model</th>
                                        <th class="d-none d-sm-table-cell">Serial Number</th>
                                        <th class="d-none d-sm-table-cell">Paper Number</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var obj in Model.OrderBy(u => u.Id))
                                    {
                                        <tr>
                                            <td>@obj.Name</td>
                                            <td>@obj.Model</td>
                                            <td class="d-none d-sm-table-cell">@obj.SerialNumber</td>
                                            <td class="d-none d-sm-table-cell">@obj.paperNumber</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="Printer" asp-action="Edit" asp-route-ID="@obj.Id" class="btn btn-primary">
                                                        <i class="bi bi-pencil-square"></i> Edit
                                                    </a>
                                                    <a asp-controller="Printer" asp-action="Delete" asp-route-ID="@obj.Id" class="btn btn-danger">
                                                        <i class="bi bi-trash-fill"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>