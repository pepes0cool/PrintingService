@model User

<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buy Pages</title>
    <script>
        function calculateTotal() {
            const pricePerPage = 3000;
            const numPages = document.getElementById('numPages').value;
            const totalAmount = numPages * pricePerPage;
            document.getElementById('total').textContent = totalAmount.toLocaleString() + ' VND';
            document.getElementById('proceedBtn').disabled = numPages <= 0;
        }
    </script>
</head>
<style>
    /* Navigation Bar */
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
    }

    /* Sidebar */
    .sidebar {
        position: fixed;
        top: 60px; /* Adjust to match the nav bar height */
        left: 0;
        width: 200px;
        height: calc(100% - 60px); /* Subtract nav bar height */
        background-color: #f8f9fa;
    }

    .sidebar-item {
        padding: 10px;
    }

    /* Main Content */
    .main-content {
        margin-top: 60px; /* Prevent content from being under nav bar */
        margin-left: 200px; /* Width of the sidebar */
    }
</style>
<main class="main-content">
    <div class="container-fluid">
        <div class="row">
            <aside class="sidebar">
                <div class="sidebar-item">
                    <a asp-controller="Printing" asp-action="Index" asp-area="Student" class="text-decoration-none">üñ®Ô∏è Print Document</a>
                </div>
                <div class="sidebar-item">
                    <a asp-controller="Home" asp-action="ViewHistory" asp-area="Student" class="text-decoration-none"> üìú View History </a>
                </div>
                <div class="sidebar-item">
                    <a asp-controller="Buy" asp-action="Index" asp-area="Student" class="text-decoration-none">üíµ Buy tokens</a>
                </div>
                @if (User.IsInRole("SPSO"))
                {
                    <div class="sidebar-item">
                        <a asp-controller="Printer" asp-action="Index" asp-area="SPSO" class="text-decoration-none">üñ®Ô∏è Manage Printer</a>
                    </div>
                }
            </aside>

            <div class="header">
                <h1>Buy tokens</h1>
            </div>

            <div class="container">
                <div class="balance">
                    Current Balance: <span id="balance">@Model.PaperBalance</span>
                </div>
                <div class="logo">
                    <img src="~/img/bklogo1.png" alt="Logo" width="200px">
                </div>


                <div class="balance">
                    Current Balance: <span id="balance"> @Model.PaperBalance</span>
                </div>
                <form asp-action="BuyPages" asp-controller="Buy" method="post">
                    <label for="numPages">Number of printing time:</label>
                    <input type="number" id="numPages" name="numPage" min="1" value="1"
                           oninput="calculateTotal(3000)">
                    <div class="total">
                        Total: <span id="total">3000 VND</span>
                    </div>
                    
                <button id="proceedBtn" asp-controller="Buy" asp-action="BuyPages" asp-area="Student">Proceed</button>
                </form>
            </div>
        </div>
    </div>
</main>
