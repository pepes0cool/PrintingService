@using Microsoft.AspNetCore.Identity
@using SSPS.Models
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Home Page";
    var facts = new List<string>
    {
        "90% of the data in the world was generated in the last two years",
        "The first 1GB hard drive cost $40,000",
        "The first computer virus was created in 1983",
        "More than 570 new websites are created every minute",
        "The first email was sent by Ray Tomlinson to himself in 1971",
        "There are over 3.5 billion Google searches per day",
        "The first computer mouse was made of wood",
        "The first 1TB hard drive was released in 2007",
        "The first domain name ever registered was Symbolics.com",
        "The first webcam was used to monitor a coffee pot"
    };
    var random = new Random();
    var randomFact = facts[random.Next(facts.Count)];
    var user = await UserManager.GetUserAsync(User);
   
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        /* Navigation Bar */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 60px; /* Adjust to match the nav bar height */
            left: 0;
            width: 200px;
            height: calc(100% - 60px); /* Subtract nav bar height */
            background-color: #f8f9fa;
        }

        .sidebar-item {
            padding: 10px;
        }

        /* Main Content */
        .main-content {
            margin-top: 60px; /* Prevent content from being under nav bar */
            margin-left: 200px; /* Width of the sidebar */
        }
    </style>
</head>
<body>
    <aside class="sidebar">
        <div class="sidebar-item">
            <a asp-controller="Printer" asp-action="Index" asp-area="Student"class="text-decoration-none">🖨️ Print Document</a>
        </div>
        <div class="sidebar-item">
            <span>📜 View History</span>
        </div>
        <div class="sidebar-item">
            <span>💵 Buy Paper</span>
        </div>
        <div class="sidebar-item">
            <span>📊 History</span>
        </div>

    </aside>

    <main class="main-content">
        <div class="welcome-section">
            <p class="welcome-back">Welcome back,</p>
			@if (SignInManager.IsSignedIn(User))
			{
                <h1 class="role-title">@user.UserName</h1>
			})

            <div class="fact-box">
                <p class="fact-text">
                    Do you know that:<br>
                    @randomFact
                </p>
            </div>

            <div class="button-group">
                <a asp-controller="Printer" asp-action="Index" asp-area="Student" class="btn" style="background-color:#8A70D6; font-style:italic; text-decoration-color:initial;">
                    Print something?
                </a>
                <button class="btn btn-secondary ">View History</button>
            </div>
        </div>

        <div class="logo-section">
            <div class="bk-logo">
                <img src="~/img/bklogo.png" alt="BK" style="width:400px"  />
            </div>
        </div>
    </main>
</body>
</html>