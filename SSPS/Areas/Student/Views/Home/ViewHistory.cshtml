@model IEnumerable<SSPS.Models.History>

<div class="container my-4">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h2 class="pt-2 text-black align-content-center">
                        History
                    </h2>
                </div>
            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
                @if (Model.Any())
                {
                    @foreach (var history in Model)
                    {
                        <div class="row border-bottom pb-3">
                            <div class="col-12 pt-md-3" style="align-content">
                                <h5 class="text-uppercase text-secondary"><strong>Record ID: @history.Id</strong></h5>
                                <h5 class="text-uppercase text-secondary"><strong> Printer Name: @history.Printer.Name</strong>
                                    <strong> User: @history.User.Name</strong>
                                </h5>
                                <h5 class="text-uppercase text-secondary"><strong>Date: @history.status</strong> <strong>at @history.date</strong></h5>

                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-4">
                        <p class="text-muted">No records available at the moment.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>